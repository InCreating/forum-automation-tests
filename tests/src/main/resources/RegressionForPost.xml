<suite name="Creating New Post" verbose="1">
    <test name="Chrome version">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="TopicPostPage.PostTest">
                <methods>
                    <include name="createPost"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Edge version">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="TopicPostPage.PostTest">
                <methods>
                    <include name="createPost"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
